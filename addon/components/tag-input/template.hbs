<div
  class={{TAG_INPUT_VALUES}}
  onclick={{action "onFocus"}}
  onkeydown={{action "handleKeydown"}}
>
  {{#each data as |item index|}}
    <Tag
      @large={{large}}
      @minimal={{minimal}}
      @params={{index}}
      @interactive={{interactive}}
      @round={{round}}
      @icon={{icon}}
      @rightIcon={{rightIcon}}
      @intent={{intent}}
      @value={{item}}
      @removable={{removable}}
      @bgColor={{defaultBgcolor}}
      @fgColor={{defaultFgcolor}}
      @onRemove={{action "Delete"}}
      @disabled={{disabled}}
     />

  {{/each}}
  <form autocomplete="off" {{action "savetag" on="submit"}}>
    {{#if disabled}}
      {{input
        class=INPUT_GHOST
        disabled=true
        value=tag
        focusOut=(action "onBlur")
      }}
    {{else}}
      {{input
        class=INPUT_GHOST
        value=tag
        placeholder=placeholder
        focusOut=(action "onBlur")
      }}
    {{/if}}
  </form>
</div>
{{#if (and (not disabled) (not isCloseNotRequired))}}
  <button type="button" class="{{BUTTON}} {{MINIMAL}}" {{action "DeleteAll"}}>
    <svg
      class={{ICON}}
      data-icon="cross"
      width="16"
      height="16"
      viewBox="0 0 16 16"
    >
      <desc>
        cross
      </desc>
      <path
        d="M9.41 8l3.29-3.29c.19-.18.3-.43.3-.71a1.003 1.003 0 0 0-1.71-.71L8 6.59l-3.29-3.3a1.003 1.003 0 0 0-1.42 1.42L6.59 8 3.3 11.29c-.19.18-.3.43-.3.71a1.003 1.003 0 0 0 1.71.71L8 9.41l3.29 3.29c.18.19.43.3.71.3a1.003 1.003 0 0 0 .71-1.71L9.41 8z"
        fill-rule="evenodd"
      ></path>
    </svg>
  </button>
{{/if}}
{{yield}}