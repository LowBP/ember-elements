{{textarea
  value=value
  cols=cols
  rows=rows
  class=classBind
  id=textAreaId
  autofocus=autofocus
  dir=dir
  dirname=dirname
  disabled=disabled
  form=form
  maxlength=maxlength
  name=name
  placeholder=placeholder
  readonly=readOnly
  required=required
  tabindex=(if disabled -1 tabindex)
  spellcheck=spellcheck
  selectionDirection=selectionDirection
  selectionEnd=selectionEnd
  input=(action "onChangeArea")
}}