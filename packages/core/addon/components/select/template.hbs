<Overlay
  @isOpen={{@isOpen}}
  @lazy={{false}}
  @hasBackdrop={{false}}
  @onClose={{@onClose}}
>
  {{#if @isOpen}}
    <EmberPopover
      class={{rw this.TRANSITION_CONTAINER}}
      @popperTarget={{@popperTarget}}
    >
      <div
        class={{rw this.POPOVER }}
        style={{transformOrigin}}
        {...popoverHandlers}
      >
        {this.isArrowEnabled() && (
        <PopoverArrow
          arrowProps='{popperProps.arrowProps}'
          placement='{popperProps.placement}'
        />
        )}
        <div className='{Classes.POPOVER_CONTENT}'>
          {this.understandChildren().content}
        </div>
      </div>
    </EmberPopover>
  {{/if}}
</Overlay>
{{yield}}